@model LND.Web.Models.RegisterViewModel

@{

    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/layouts.cshtml";
}

<!-- Modal2 -->
<!-- Modal content-->
<div class="modal-content" style="padding-left:200px;padding-right:200px;padding-top:30px">
    <div class="modal-body modal-body-sub_agile">
        <div class="col-md-5 modal_body_left modal_body_left1">
            <h3 class="agileinfo_sign">Đăng ký</h3>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {

                @Html.AntiForgeryToken();
                @Html.ValidationSummary(false, "", new { @class = "error" })
                if (ViewData["SuccessMsg"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        <strong>Chúc mừng bạn! </strong> đã đăng ký thành công.
                        <br />Vui lòng click <a href="/dang-nhap-html">vào đây </a>để đăng nhập.
                    </div>

                }
                if (ViewData["FailedMessage"] != null)
                {
                    <div class="alert alert-error" role="alert">
                        <strong>Đăng ký thất bại! </strong>
                    </div>
                }
                <div class="styled-input agile-styled-input-top">
                    @Html.TextBoxFor(model => model.FullName)
                    <label>Họ tên<Sup class="star">*</Sup></label>
                    <span></span>
                </div>
                <div class="styled-input agile-styled-input-top">
                    @Html.TextBoxFor(model => model.UserName)
                    <label title="Phải nhập">Tài khoản<Sup class="star">*</Sup></label>
                    <span></span>
                </div>
                <div class="styled-input">
                    @Html.TextBoxFor(model => model.Email)
                    <label title="Phải nhập">Email<Sup class="star">*</Sup></label>
                    <span></span>
                </div>
                <div class="styled-input">
                    @Html.PasswordFor(model => model.Password)
                    <label title="Phải nhập">Mật khẩu<Sup class="star">*</Sup></label>
                    <span></span>
                </div>
                <div class="styled-input">
                    @Html.PasswordFor(model => model.ConfirmPassword)
                    <label title="Phải nhập">Xác nhận mật khẩu<Sup class="star">*</Sup></label>
                    <span></span>
                </div>
                <div class="styled-input">
                    @Html.TextBoxFor(model => model.PhoneNumber)
                    <label>Số điện thoại</label>
                    <span></span>
                </div>
                <div class="styled-input">
                    @Html.TextBoxFor(model => model.Address)
                    <label>Địa chỉ</label>
                    <span></span>
                </div>

                <input type="submit" value="Đăng ký">

            }
            <ul class="social-nav model-3d-0 footer-social w3_agile_social top_agile_third">
                <li>
                    <a href="#" class="facebook">
                        <div class="front"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="twitter">
                        <div class="front"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="instagram">
                        <div class="front"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                    </a>
                </li>
                <li>
                    <a href="#" class="pinterest">
                        <div class="front"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                        <div class="back"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                    </a>
                </li>
            </ul>
            <div class="clearfix"></div>
            <p><a href="#">By clicking register, I agree to your terms</a></p>
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<!-- //Modal content-->
<!-- //Modal2 -->